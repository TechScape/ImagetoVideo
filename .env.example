# Server Configuration
FLASK_ENV=development
FLASK_DEBUG=True
HOST=0.0.0.0
PORT=5000

# Model Configuration
MODEL_NAME=alibaba-pai/wan-2.0-5b
DEVICE=cuda  # Options: cuda, cpu, mps (for Mac)
USE_FP16=True  # Use half precision for faster inference

# Generation Settings
DEFAULT_RESOLUTION=720
DEFAULT_FPS=24
DEFAULT_DURATION=5  # seconds
MAX_VIDEO_LENGTH=10  # seconds

# Directory Settings
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Optional: Replicate API (if using cloud inference)
# REPLICATE_API_TOKEN=your_api_token_here
